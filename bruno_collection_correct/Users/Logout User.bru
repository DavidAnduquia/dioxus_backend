meta {
  name: Logout User
  type: http
  seq: 7
}

post {
  url: {{BASE_URL}}/api/usuario/logout/{{USER_ID}}
  body: none
  auth: bearer
}

auth:bearer {
  token: {{JWT_TOKEN}}
}

script:post-response {
  // Limpiar automáticamente el JWT token después del logout
  if (res.getStatusCode() === 200) {
    bru.setEnvVar("JWT_TOKEN", "");
    console.log("✅ JWT Token limpiado automáticamente");
  }
}

